{
  "logger": {
    "elasticsearch": {
      "level": "error",
      "clientOpts": {
        "node": "http://elasticsearch:9200"
      },
      "dataStream": true,
      "source": "access-control-srv"
    },
    "console": {
      "handleExceptions": false,
      "level": "silly",
      "colorize": true,
      "prettyPrint": true
    }
  },
  "redis": {
    "url": "redis://redis:6379"
  },
  "authorization": {
    "cache": {
      "url": "redis://redis:6379"
    }
  },
  "server": {
    "transports": [
      {
        "name": "grpc",
        "provider": "grpc",
        "addr": "0.0.0.0:50051"
      }
    ]
  },
  "events": {
    "kafka": {
      "kafka": {
        "brokers": [
          "kafka:9092"
        ]
      }
    }
  },
  "database": {
    "main": {
      "host": "arangodb"
    }
  },
  "adapter": {
    "graphql": {
      "url": "https://api.restorecommerce.io/graphql"
    }
  },
  "client": {
    "acs-srv": {
      "address": "access-control-srv:50051"
    },
    "user": {
      "address": "identity-srv:50051"
    }
  }
}