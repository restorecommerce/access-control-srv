  "description": "Access Control Service",
  "main": "lib/worker.js",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/access-control-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "access",
    "control",
    "service"
  ],
  "type": "module",
  "dependencies": {
    "@restorecommerce/acs-client": "^3.1.7",
    "@restorecommerce/chassis-srv": "^1.7.9",
    "@restorecommerce/grpc-client": "^2.2.13",
    "@restorecommerce/kafka-client": "^1.3.6",
    "@restorecommerce/logger": "^1.3.8",
