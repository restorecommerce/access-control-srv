    "@restorecommerce/resource-base-interface": "^1.9.9",
    "@restorecommerce/service-config": "^1.1.7",
    "apollo-boost": "^0.4.9",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link-http": "^1.5.17",
    "cross-fetch": "^4.1.0",
    "graphql-tag": "^2.12.6",
    "js-yaml": "^4.1.0",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@alenon/grpc-mock-server": "3.2.3",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@grpc/proto-loader": "^0.8.0",
    "@restorecommerce/dev": "^0.2.0",
    "@restorecommerce/protos": "^6.11.11",
    "@semantic-release-plus/docker": "^3.1.3",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash-es": "^4.17.12",
    "@types/nconf": "^0.10.7",
    "@types/nock": "^11.1.0",
    "@types/node": "^24.9.2",
    "@vitest/coverage-v8": "^4.0.6",
    "c8": "^10.1.3",
    "coveralls": "^3.1.1",
    "cross-env": "^10.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.25.11",
    "eslint": "^9.39.0",
    "husky": "^9.1.7",
    "nock": "^14.0.10",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.1.0",
    "should": "^13.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.6"
  },
  "scripts": {
    "start": "node lib/start.cjs",
    "dev": "cross-env NODE_ENV=development nodemon --watch './src/**/*.ts' --exec node --loader ts-node/esm ./src/start.ts",
    "test": "npm run build && vitest run",
    "lint": "eslint src",
    "coveralls": "c8 report --reporter=text-lcov | coveralls",
    "build:clean": "rimraf lib",
    "build:es": "node esbuild.mjs",
    "build": "npm-run-all lint build:clean build:es",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {}\""
  },
  "engines": {
    "node": ">= 20.8.0"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release-plus/docker",
        {
          "name": "docker.io/restorecommerce/access-control-srv",
          "skipLogin": true
        }
      ],
      [
        "@semantic-release-plus/docker",
        {
          "name": "ghcr.io/restorecommerce/access-control-srv",
          "skipLogin": true
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
