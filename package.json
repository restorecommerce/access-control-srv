{
  "name": "@restorecommerce/access-control-srv",
  "version": "0.0.1",
  "description": "Access Control Service",
  "main": "start.js",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://gitlab.n-fuse.co/restorecommerce/access-control-srv.git"
  },
  "keywords": [
    "restore",
    "commerce",
    "access",
    "control",
    "service"
  ],
  "dependencies": {
    "@restorecommerce/chassis-srv": "github:restorecommerce/chassis-srv",
    "@restorecommerce/cluster-service": "github:restorecommerce/cluster-service",
    "@restorecommerce/grpc-client": "^0.0.1",
    "@restorecommerce/kafka-client": "^0.1.5",
    "@restorecommerce/logger": "^0.1.11",
    "@restorecommerce/protos": "github:restorecommerce/protos",
    "@restorecommerce/resource-base-interface": "github:restorecommerce/resource-base-interface",
    "@restorecommerce/service-config": "^0.1.5",
    "apollo-boost": "^0.4.4",
    "cross-fetch": "^3.0.4",
    "graphql": "^14.5.8",
    "graphql-tag": "^2.10.1",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.15",
    "node-eval": "^2.0.0",
    "traverse": "^0.6.6"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.142",
    "@types/mocha": "^5.2.7",
    "@types/nock": "^11.1.0",
    "@types/node": "^12.7.11",
    "coveralls": "^3.0.6",
    "cross-env": "^6.0.3",
    "mocha": "^6.2.1",
    "nock": "^11.4.0",
    "nodemon": "^1.19.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "rimraf": "^3.0.0",
    "should": "^13.2.3",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  },
  "scripts": {
    "start": "node start.js",
    "dev": "cross-env NODE_ENV=development nodemon --watch './*.ts' --exec 'ts-node' start.ts --trace-warnings",
    "pretest": "npm run build && npm run tsctests && npm run lint",
    "test": "cross-env NODE_ENV=test nyc npm run mocha",
    "lint": "cross-env NODE_ENV=development tslint core/**/*.ts *.ts test/core_test.ts test/microservice_test.ts",
    "mocha": "cross-env NODE_ENV=test mocha -R spec --timeout 60000 test/core_test.js test/microservice_test.js --stack-trace --exit",
    "mocha-debug": "mocha -R spec test/core_test.js test/microservice_test.js --inspect-brk",
    "test-core": "cross-env NODE_ENV=test npm run lint && npm run mocha-core",
    "coveralls": "cross-env NODE_ENV=test; nyc --reporter text --reporter lcov npm test",
    "tsctests": "tsc -d -p tsconfig.test.json",
    "build:tsc": "tsc -d",
    "build:clean": "rimraf *.js core/**/*.js",
    "build": "npm-run-all lint build:clean build:tsc",
    "healthcheck": "node healthcheck.js"
  },
  "engines": {
    "node": ">= 9.2.0"
  }
}
