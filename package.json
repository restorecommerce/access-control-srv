{
  "name": "@restorecommerce/access-control-srv",
  "version": "1.2.8",
  "description": "Access Control Service",
  "main": "lib/worker.js",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/access-control-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "access",
    "control",
    "service"
  ],
  "type": "module",
  "dependencies": {
    "@restorecommerce/acs-client": "^1.4.15",
    "@restorecommerce/chassis-srv": "^1.4.9",
    "@restorecommerce/grpc-client": "^2.2.0",
    "@restorecommerce/kafka-client": "^1.1.23",
    "@restorecommerce/logger": "^1.2.10",
    "@restorecommerce/rc-grpc-clients": "^5.1.22",
    "@restorecommerce/resource-base-interface": "^1.4.8",
    "@restorecommerce/service-config": "^1.0.12",
    "apollo-boost": "^0.4.9",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link-http": "^1.5.17",
    "cross-fetch": "^4.0.0",
    "graphql-tag": "^2.12.6",
    "js-yaml": "^4.1.0",
    "lodash-es": "^4.17.21",
    "node-eval": "^2.0.0",
    "traverse": "^0.6.8"
  },
  "devDependencies": {
    "@alenon/grpc-mock-server": "^3.1.9",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@grpc/proto-loader": "^0.7.10",
    "@restorecommerce/dev": "^0.0.9",
    "@restorecommerce/protos": "^6.8.0",
    "@semantic-release-plus/docker": "^3.1.3",
    "@types/lodash-es": "^4.17.12",
    "@types/mocha": "^10.0.6",
    "@types/nock": "^11.1.0",
    "@types/node": "^20.11.29",
    "@types/traverse": "^0.6.36",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/eslint-plugin-tslint": "^7.0.2",
    "@typescript-eslint/parser": "^7.3.1",
    "c8": "^9.1.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "eslint-plugin-prefer-arrow-functions": "^3.3.2",
    "husky": "^9.0.11",
    "mocha": "^10.3.0",
    "nock": "^13.5.4",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "should": "^13.2.3",
    "ts-node": "^10.9.2",
    "tslint": "^6.1.3",
    "typescript": "^5.4.2"
  },
  "overrides": {
    "@grpc/grpc-js": "1.10.1"
  },
  "scripts": {
    "start": "node lib/start.cjs",
    "dev": "cross-env NODE_ENV=development nodemon --watch './src/**/*.ts' --exec node --loader ts-node/esm ./src/start.ts",
    "test": "npm run build && npm run lint && c8 --reporter=text npm run mocha",
    "lint": "eslint src --ext .ts",
    "mocha": "cross-env NODE_ENV=test mocha --full-trace --exit --timeout 120000",
    "mocha-debug": "mocha -R spec test/*_test.js --inspect-brk",
    "test-core": "cross-env NODE_ENV=test npm run lint && npm run mocha-core",
    "lcov-report": "c8 report --reporter=lcov",
    "coveralls": "c8 report --reporter=text-lcov | coveralls",
    "tsctests": "tsc -d -p tsconfig.test.json",
    "build:tsc": "esbuild ./src/start.ts --bundle --platform=node --outfile=lib/start.cjs --minify --tree-shaking=true --sourcemap=inline",
    "build:clean": "rimraf lib",
    "build": "npm-run-all lint build:clean build:tsc",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {}\""
  },
  "engines": {
    "node": ">= 20.8.0"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release-plus/docker",
        {
          "name": "docker.io/restorecommerce/access-control-srv",
          "skipLogin": true
        }
      ],
      [
        "@semantic-release-plus/docker",
        {
          "name": "ghcr.io/restorecommerce/access-control-srv",
          "skipLogin": true
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
