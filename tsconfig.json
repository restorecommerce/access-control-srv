{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true
  },
  "include": [
    "src/core/*.ts",
    "src/core/**/*.ts",
    "src/service.ts",
    "src/healthcheck.ts",
    "src/start.ts",
    "src/worker.ts",
    "src/resourceManager.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
