{
  "logger": {
    "console": {
      "handleExceptions": false,
      "level": "crit",
      "colorize": true,
      "prettyPrint": true
    }
  },
  "client": {
    "policy_set": {
      "transports": {
        "grpc": {
          "service": "io.restorecommerce.policy_set.Service",
          "timeout": 3000,
          "protos": [
            "io/restorecommerce/policy_set.proto"
          ],
          "protoRoot": "node_modules/@restorecommerce/protos/"
        }
      },
      "loadbalancer": {
        "name": "roundRobin"
      },
      "publisher": {
        "name": "static",
        "instances": [
          "grpc://localhost:50061"
        ]
      },
      "endpoints": {
        "read": {},
        "create": {},
        "update": {},
        "upsert": {},
        "delete": {}
      }
    },
    "policy": {
      "transports": {
        "grpc": {
          "service": "io.restorecommerce.policy.Service",
          "timeout": 3000,
          "protos": [
            "io/restorecommerce/policy.proto"
          ],
          "protoRoot": "node_modules/@restorecommerce/protos/"
        }
      },
      "loadbalancer": {
        "name": "roundRobin"
      },
      "publisher": {
        "name": "static",
        "instances": [
          "grpc://localhost:50061"
        ]
      },
      "endpoints": {
        "read": {},
        "create": {},
        "update": {},
        "upsert": {},
        "delete": {}
      }
    },
    "rule": {
      "transports": {
        "grpc": {
          "service": "io.restorecommerce.rule.Service",
          "timeout": 3000,
          "protos": [
            "io/restorecommerce/rule.proto"
          ],
          "protoRoot": "node_modules/@restorecommerce/protos/"
        }
      },
      "loadbalancer": {
        "name": "roundRobin"
      },
      "publisher": {
        "name": "static",
        "instances": [
          "grpc://localhost:50061"
        ]
      },
      "endpoints": {
        "read": {},
        "create": {},
        "update": {},
        "upsert": {},
        "delete": {}
      }
    },
    "acs": {
      "transports": {
        "grpc": {
          "service": "io.restorecommerce.access_control.Service",
          "timeout": 3000,
          "protos": [
            "io/restorecommerce/access_control.proto"
          ],
          "protoRoot": "node_modules/@restorecommerce/protos/"
        }
      },
      "loadbalancer": {
        "name": "roundRobin"
      },
      "publisher": {
        "name": "static",
        "instances": [
          "grpc://localhost:50061"
        ]
      },
      "endpoints": {
        "isAllowed": {},
        "whatIsAllowed": {}
      }
    }
  },
  "database": {
    "main": {
      "provider": "arango",
      "host": "localhost",
      "port": 8529,
      "database": "access-control-srv-test",
      "autoCreate": true,
      "retries": 6,
      "delay": 30000,
      "collections": [
        "policy",
        "rule",
        "policy_set"
      ]
    }
  }
}
